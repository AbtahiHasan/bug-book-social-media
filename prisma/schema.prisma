

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id 
  username String @unique
  displayName String
  email String? @unique
  password String? 
  googleId String?
  avaterUrl String?
  bio String?
  sessions Session[]
  createAt DateTime @default(now())

  @@map("users")
}

model Session {
  id String @id 
  userId String
  expiresAt String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}